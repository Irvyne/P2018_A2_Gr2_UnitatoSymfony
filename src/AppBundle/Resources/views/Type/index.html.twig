{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Type list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td><a href="{{ path('type_show', { 'id': type.id }) }}">{{ type.id }}</a></td>
                <td>{{ type.name }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('type_show', { 'id': type.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('type_update', { 'id': type.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('type_create') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
