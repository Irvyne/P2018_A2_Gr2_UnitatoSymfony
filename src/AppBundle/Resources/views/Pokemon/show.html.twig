{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Pokemon</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pokemon.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pokemon.name }}</td>
            </tr>
            <tr>
                <th>Hp</th>
                <td>{{ pokemon.hp }}</td>
            </tr>
            <tr>
                <th>Level</th>
                <td>{{ pokemon.level }}</td>
            </tr>
            <tr>
                <th>Attack</th>
                <td>{{ pokemon.attack }}</td>
            </tr>
            <tr>
                <th>Defense</th>
                <td>{{ pokemon.defense }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pokemon.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('pokemon') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('pokemon_update', { 'id': pokemon.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
